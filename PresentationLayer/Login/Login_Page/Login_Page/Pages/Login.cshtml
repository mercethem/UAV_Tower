@page
@model Login_Page.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(to right, #267871, #136a8a);
            font-family: 'Arial', sans-serif;
        }

        .login {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .btn-login {
            background-color: #267871;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .btn-login:hover {
                background-color: #136a8a;
            }

        .forgot {
            display: block;
            margin-top: 10px;
            color: #267871;
            text-decoration: none;
        }

        .error-message {
            color: #d9534f;
            font-size: 14px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <section class="login">
        <div class="head">
            <h1 class="company">UAV Tower</h1>
        </div>

        @* Hata mesajı için eklenen alan *@
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">
                @Model.ErrorMessage
            </div>
        }

        <div class="form">
            <form method="post">
                <input asp-for="Login.Username" placeholder="Kullanıcı Adı" class="input-field" required><br>
                <input asp-for="Login.Password" placeholder="Şifre" type="password" class="input-field" required><br>
                <button type="submit" class="btn-login">Giriş Yap</button>
            </form>
        </div>
    </section>
</body>
</html>
